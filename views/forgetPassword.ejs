<%- include("./partials/header") %>
<div class="w-full h-screen bg-white-100">

    <div class="flex w-full h-screen ">

        <div class="w-[40vw] h-full relative flex flex-col items-center overflow-hidden pl-[3%] pt-[3%] ">
            <div id="left_login_circle1" class="absolute rounded-full  w-[35%] h-[25%] border-[40px] border-[#d4e8f3]">    
            </div>
            <div id="l2" class="absolute rounded-full  w-[35%] h-[25%] border-[40px] border-[#d4e8f3]">    
            </div>
            <div id="l3" class="absolute rounded-full  w-[35%] h-[25%] border-[40px] border-[#d4e8f3] overflow-hidden">    
            </div>

            <div class="heading mt-[30%] text-5xl ml-10 font-bold text-[] z-5 border-b-2 border-indigo-500"><span class="text-[#2784bb] ">C</span>onnectSphere</div>

            <br><br><br>

            <div class="flex w-[35%] flex-col justify-between items">
              <h1 class="text-2xl ">Create your new password</h1><br>
              <form class="flex flex-col justify-between" action="/forgetPassword/<%= id %>" method="post">

                <div class="flex justify-between">
                  <p>Create your new password below</p>
                </div>

                <input type="password" name="password" placeholder="new passsword" required="" class="block px-2 mt-2  w-full rounded-md border-0 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-indigo-600 sm:text-sm sm:leading-6"><br>
                
                <button class="bg-blue-500 py-2 px-3 rounded-md hover:bg-blue-400 font-semibold" type="submit">Change passsword</button>

